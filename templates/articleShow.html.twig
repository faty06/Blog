{% extends 'base_Galsen.html.twig' %}

{% block title %}
    Article
{% endblock title %}

{% block header %}
    <nav>
        <ul>
            <li><a href="{{ path ("home") }}">Home</a></li>
            <li><a href="{{ path ("articleList") }}">Article</a></li>
        </ul>
    </nav>
{% endblock header %}

{% block main %}
    <article class="article">
            <h1>{{ article.title }}</h1>
            <p>{{ article.content }}</p>
            <p>{{ article.createAt | date('y-m-d') }}</p>
            <p>{{ article.category.title}}</p>
    </article>
{% endblock main %}

{% block footer %}

{% endblock footer %}